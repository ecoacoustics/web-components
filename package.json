{
  "name": "@ecoacoustics/web-components",
  "description": "Ecoacoustic web components",
  "version": "0.1.0",
  "types": "@types/",
  "main": "js/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start:docs": "vite ./dist/docs/",
    "build:docs": "rimraf build/ && cem analyze --litelement --globs \"src/components/**/*.ts\" && vite build && eleventy --config=.eleventy.cjs",
    "build:components": "vite build && tsc",
    "publish:components": "pnpm build:components && npm publish --access public",
    "test": "pnpm test:unit; pnpm test:e2e",
    "test:unit": "playwright test components/",
    "test:e2e": "playwright test tests/",
    "lint": "eslint ."
  },
  "files": [
    "js",
    "@types"
  ],
  "customElements": "custom-elements.json",
  "dependencies": {
    "@lit/context": "^1.1.0",
    "lit": "^3.1.2",
    "lucide-static": "^0.363.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@custom-elements-manifest/analyzer": "^0.9.4",
    "@playwright/test": "^1.41.0",
    "@sand4rt/experimental-ct-web": "^1.41.0",
    "@types/node": "^20.12.2",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-summary": "^2.0.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^7.3.1",
    "vite": "^4.4.7",
    "vite-plugin-cem": "^0.7.0",
    "vite-svg-loader": "^5.1.0"
  }
}
